<script>
$(document).ready(function() {
  // Initialize all Select2 dropdowns
  
  // Initialize Select2 for product selection
  function initializeProductSelect2(element) {
   $(element).select2({
  theme: 'bootstrap4',
  placeholder: "Search product...",
  allowClear: true,
  ajax: {
    url: "/getproductsnames", // Your product API endpoint
    dataType: "json",
    delay: 250,
    data: function(params) {
      return {
        q: params.term || "" // Changed from 'search' to 'q' to match backend
      };
    },
    processResults: function(data) {
      // Check the structure of your response
      if (data.results) {
        // If your backend already returns { results: [...] }
        return data;
      } else {
        // If your backend returns an array of products directly
        return {
          results: data.map(function(item) {
            return {
              id: item._id || item.id, // Handle both MongoDB _id and regular id
              text: item.name || item.text, // Handle both name and text
              price: item.price || 0
            };
          }),
        };
      }
    },
    cache: true
  }
}).on('select2:select', function(e) {
  // When a product is selected, populate the price field
  const data = e.params.data;
  const row = $(this).closest('tr');
       
  // Set price from data if available
  if (data.price) {
    row.find('input[name$="[price]"]').val(data.price);
  }
});
  }

  // Initialize Select2 for the first product row
  initializeProductSelect2($('#productsTable tbody tr:first-child select[name$="[name]"]'));
  
  // Enable the first remove button
  $('.remove-product').prop('disabled', false);

  // Add product row
  let productCount = 1;
  $('#addProduct').click(function() {
    const newRow = `
      <tr>
        <td data-label="Product">
          <select class="form-control product-select" name="products[${productCount}][name]" required>
            <option value="" disabled selected>Search Product</option>
          </select>
        </td>
        <td data-label="Quantity">
          <input type="number" class="form-control" name="products[${productCount}][quantity]" min="1" value="1" required>
        </td>
        <td data-label="Type">
          <select class="form-control" name="products[${productCount}][type]" required>
                        <option value="Sold">Sold</option>

            <option value="Lend">Lend</option>
          </select>
        </td>
        <td data-label="Unit Price">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" name="products[${productCount}][price]" min="0" step="0.01" required>
          </div>
        </td>
        <td data-label="Action">
          <button type="button" class="btn-remove remove-product">
            <i class="fas fa-times"></i>
          </button>
        </td>
      </tr>
    `;
    $('#productsTable tbody').append(newRow);
    
    // Initialize Select2 for the new row
    initializeProductSelect2($('#productsTable tbody tr:last-child select[name$="[name]"]'));
    
    productCount++;
  });

  // Remove product row - allow removing any row, including the last one
  $(document).on('click', '.remove-product', function() {
    $(this).closest('tr').remove();
    
    // Add an empty row if all rows were removed
    if($('#productsTable tbody tr').length === 0) {
      addEmptyRow();
    }
    
    // Reindex the products to maintain proper naming
    reindexProducts();
  });
  
  // Function to add an empty row when all rows are deleted
  function addEmptyRow() {
    const emptyRow = `
      <tr>
        <td data-label="Product">
          <select class="form-control product-select" name="products[0][name]" required>
            <option value="" disabled selected>Search Product</option>
          </select>
        </td>
        <td data-label="Quantity">
          <input type="number" class="form-control" name="products[0][quantity]" min="1" value="1" required>
        </td>
        <td data-label="Type">
          <select class="form-control" name="products[0][type]" required>
                        <option value="Sold">Sold</option>

            <option value="Lend">Lend</option>
          </select>
        </td>
        <td data-label="Unit Price">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" name="products[0][price]" min="0" step="0.01" required>
          </div>
        </td>
        <td data-label="Action">
          <button type="button" class="btn-remove remove-product">
            <i class="fas fa-times"></i>
          </button>
        </td>
      </tr>
    `;
    $('#productsTable tbody').append(emptyRow);
    initializeProductSelect2($('#productsTable tbody tr:last-child select[name$="[name]"]'));
    productCount = 1;
  }
  
  // Function to reindex product rows after removal
  function reindexProducts() {
    $('#productsTable tbody tr').each(function(index) {
      $(this).find('select[name$="[name]"]').attr('name', 'products[' + index + '][name]');
      $(this).find('input[name$="[quantity]"]').attr('name', 'products[' + index + '][quantity]');
      $(this).find('select[name$="[type]"]').attr('name', 'products[' + index + '][type]');
      $(this).find('input[name$="[price]"]').attr('name', 'products[' + index + '][price]');
    });
    
    // Update product count to match the number of rows
    productCount = $('#productsTable tbody tr').length;
  }

  $('#orderForm').submit(function(e) {
    e.preventDefault(); // Prevent default form submission
    
    // Check if at least one product is selected
    let validProductSelected = false;
    
    $('select[name$="[name]"]').each(function() {
      if($(this).val()) {
        validProductSelected = true;
        return false; // Break out of the loop once we find a valid product
      }
    });
    
    if(!validProductSelected) {
      alert('Please select at least one product');
      return false;
    }
    
    // Prepare products array
    let products = [];
    $('#productsTable tbody tr').each(function() {
      const row = $(this);
      const productid = row.find('select[name$="[name]"]').val();
      var productName = row.find('select[name$="[name]"]').val(); // Get selected text



      
      // Only include products that have been selected
      if (productName) {
        products.push({
          name: productName,
          productid:productid ,
          quantity: row.find('input[name$="[quantity]"]').val(),
          type: row.find('select[name$="[type]"]').val(),
          price: row.find('input[name$="[price]"]').val().replace('$', '') // Remove dollar sign if present
        });
      }
    });
    
    // Create form data object
    const formData = {
      name: $('#customerName').val(),
      customerId: $('#customerCode').val(),
      area: $('#zone').val(),
      truckId: $('#truckId').val(),
      notes: $('#notes').val(),
      products: products  // Add our properly formatted products array
    };
    
    // Show loading indicator
    const submitBtn = $('#submitBtn');
    const originalBtnText = submitBtn.html();
    submitBtn.html('<i class="fas fa-spinner fa-spin"></i> Processing...').prop('disabled', true);
    
    // Submit form via AJAX
    $.ajax({
      url: $('#orderForm').attr('action'),
      type: 'POST',
      data: JSON.stringify(formData),
      contentType: 'application/json',
      success: function(response) {
        // First verify if the response contains a valid orderId
        if (response && response.orderId) {
          // Check if orderId appears valid before redirecting
          // You might want to adjust this validation based on your expected format
          const orderId = response.orderId.toString();
          
          // Option 1: Redirect to orders list with success message and highlight
          window.location.href = '/orders?success=true' ;
          
          // Option 2 (Alternative): Try to validate order exists first
          // Uncomment this section if you prefer to check order existence first
          /*
          $.ajax({
            url: '/api/orders/validate/' + orderId,
            type: 'GET',
            success: function() {
              // Order exists, safe to redirect
              window.location.href = '/orders/' + orderId;
            },
            error: function() {
              // Order doesn't exist or other error, go to list view
              window.location.href = '/orders?success=true';
            }
          });
          */
        } else {
          // No orderId in response, go to orders list
          window.location.href = '/orders?success=true';
        }
      },
      error: function(xhr) {
        // Reset button state
        submitBtn.html(originalBtnText).prop('disabled', false);
        
        // Show error message
        let errorMessage = 'An error occurred while creating the order.';
        if (xhr.responseJSON && xhr.responseJSON.error) {
          errorMessage = xhr.responseJSON.error;
        }
        
        // Create a dismissible error alert
        const errorAlert = `
          <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            ${errorMessage}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        `;
        
        // Insert the error alert before the form
        $('#orderForm').before(errorAlert);
      }
    });
  });
});</script>
