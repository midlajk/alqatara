    <script>
   $(document).ready(function () {

       $('.salesman-js').select2({
            placeholder: "Select Salesman",

  ajax: {
    url: '/salesmanids', // Backend endpoint
    dataType: 'json',
    delay: 250, // Debounce for performance
    data: function (params) {
      return {
        search: params.term, // Select2 search term
        customKey: 'utilities' // Custom query parameter
      };
    },
    processResults: function (data) {
      return {
        results: data.map(function (item) {
          return { id: item.id, text: item.id }; // Customize text display
        }),
      };
    },
  
  },
});
      $('.asset-js').select2({
                    placeholder: "Select Asset",

          ajax: {
              url: '/productids',
              dataType: 'json',
              delay: 250,
              processResults: function (data) {
                  return {
                      results: data.results
                  };
              },
              cache: true
          }
      })
  var datatable = $("#assettable").DataTable({
   responsive: true,
    processing: true,
    serverSide: true,
    ajax: {
      url: "/getcustomerassets",
      data: function(d) {
        d.customer = '<%= id %>';
        // Add filter parameters
        d.asset = $('#asset').val();
        d.lendtype = $('#lendtype').val();
        d.fromDate = $('input[type="date"]').eq(0).val();
        d.toDate = $('input[type="date"]').eq(1).val();
        return d;
      }
    },
    language: {
      paginate: {
        next: '<i class="fas fa-chevron-right"></i>',
        previous: '<i class="fas fa-chevron-left"></i>',
      },
      search: "_INPUT_",
      searchPlaceholder: "Search asset history...",
      lengthMenu: "Show _MENU_ records",
      info: "Showing _START_ to _END_ of _TOTAL_ records",
    },
    columns: [
    {
        data: "createdAt",
        title: "Created At",
        render: function (data) {
          return data ? new Date(data).toLocaleDateString() : "N/A";
        }
      },
      {
        data: "assetType",
        title: "Asset Type",
        render: function (data) {
          return data || "N/A";
        }
      },
      {
        data: "noOfAssets",
        title: "No. of Assets",
        render: function (data) {
          return data !== undefined ? data : "N/A";
        }
      },
      {
        data: "securityDeposit",
        title: "Security Deposit",
        render: function (data) {
          return data !== undefined ? `₹${data}` : "N/A";
        }
      },
      {
        data: "lendType",
        title: "Lend Type",
        render: function (data) {
          return data || "N/A";
        }
      },
      {
        data: "truckId",
        title: "Truck ID",
        render: function (data) {
          return data || "N/A";
        }
      },
      {
        data: "salesmanId",
        title: "Salesman ID",
        render: function (data) {
          return data || "N/A";
        }
      },
  
      {
        data: null,
        title: "Actions",
        render: function (data, type, row) {
          return `
            <button class="btn btn-info btn-sm" data-id="${row._id}">View</button>
          `;
        }
      }
    ]

  });
    // Apply filters button
  $('.filter-btn').click(function() {
    datatable.ajax.reload();
    updateDashboardStats();
  });

    // Reset filters button
  $('.btn-outline-secondary').click(function() {
    $('#asset').val(null).trigger('change');
    $('#lendtype').val('');
    $('input[type="date"]').val('');
    datatable.ajax.reload();
    updateDashboardStats();
  });

  // Function to update dashboard stats
  function updateDashboardStats() {
    $.ajax({
      url: '/gettassetdetailssummary',
      method: 'GET',
      data: {
        customerId: '<%= id %>',
        asset: $('#asset').val(),
        lendtype: $('#lendtype').val(),
        fromDate: $('input[type="date"]').eq(0).val(),
        toDate: $('input[type="date"]').eq(1).val()
      },
      success: function(response) {
        if (response.success) {
          const stats = response.stats;
          $('#deliveries').text(stats.totalAssets || 0);
          $('#securitydeposit').text(stats.totalSecurityDeposit || 0);
          $('#returns').text(stats.returnedAssets || 0);
          $('#returnedpayments').text(stats.returnedPayment || 0);
        }
      }
    });
  }

  // Initialize dashboard stats on page load
  updateDashboardStats();
  // Asset summary modal
  $('#assetsummary').click(function() {
    const filters = {
      customerId: '<%= id %>',
      asset: $('#asset').val(),
      lendtype: $('#lendtype').val(),
      fromDate: $('input[type="date"]').eq(0).val(),
      toDate: $('input[type="date"]').eq(1).val()
    };

    $('#productCardsContainer').html(`
      <div class="col-12 text-center py-5">
        <i class="fas fa-spinner fa-spin fa-2x"></i>
        <p>Loading product data...</p>
      </div>
    `);
    
    $.ajax({
      url: '/gettassetdetailssummary',
      method: 'GET',
      data: filters,
      success: function(response) {
        if (response.success && response.data && response.data.length > 0) {
          renderProductCards(response.data);
        } else {
          $('#productCardsContainer').html(`
            <div class="col-12 text-center py-5">
              <i class="fas fa-box-open fa-2x mb-3"></i>
              <p>No product data available</p>
            </div>
          `);
        }
      },
      error: function(xhr, status, error) {
        $('#productCardsContainer').html(`
          <div class="col-12 text-center py-5">
            <i class="fas fa-exclamation-triangle fa-2x mb-3 text-danger"></i>
            <p>Error loading product data</p>
            <p class="small text-muted">${error}</p>
          </div>
        `);
      }
    });
    
    $('#productSummaryModal').modal('show');
  });

  // Product search in modal
  $('#productSearch').on('keyup', function() {
    const searchText = $(this).val().toLowerCase();
    $('.product-card').each(function() {
      const productName = $(this).find('.product-name').text().toLowerCase();
      $(this).toggle(productName.includes(searchText));
    });
  });
});



function renderProductCards(products) {
    let html = '';
    
    // Filter out products with no activity if desired
    const activeProducts = products.filter(p => p.count > 0 );
    
    if (activeProducts.length === 0) {
        html = `
            <div class="col-12 text-center py-5">
                <i class="fas fa-box-open fa-2x mb-3"></i>
                <p>No product activity found for current filters</p>
            </div>
        `;
    } else {
        activeProducts.forEach(product => {
            html += `
                <div class="col-md-12 product-card">
                    <div class="product-name">
                        <i class="fas fa-${product.assetType === 'bottle' ? 'wine-bottle' : 'box'} mr-2"></i>
                        ${product.assetType}
                    </div>
                    <div class="product-stats">
                        <div class="stat-item">
                            <div class="stat-value text-loaded">${product.totalLEND}</div>
                            <div class="stat-label">Lend</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-delivered">${product.totalCUSTODY}</div>
                            <div class="stat-label">Custody</div>
                        </div>
                         <div class="stat-item">
                            <div class="stat-value text-delivered">${product.totalSOLD}</div>
                            <div class="stat-label">Sold</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-returned">${product.totalRETURN}</div>
                            <div class="stat-label">Return</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value text-returned">${product.totalDeposit}</div>
                            <div class="stat-label">Deposit</div>
                        </div>
                    </div>
                </div>
            `;
        });
    }
    
    $('#productCardsContainer').html(html);
}

 </script>

