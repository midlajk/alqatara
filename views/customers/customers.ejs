    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
    
    <script>
      $(document).ready(function () {
        
        // Initialize DataTable
       var datatable = $('#customertable').DataTable({
        responsive: true,
              processing: true,
              serverSide: true,
          ajax: {
            url: 'http://localhost:5000/getcustomers', // Backend API endpoint
            dataSrc: 'docs', // Key that holds the array of data in the API response
                data: function (d) {
                  return d;
      
                  // Add any additional parameters you want to send to the server here
                },// Data source is the root of the response array
          },
          columns: [
  { data: 'name', title: 'Customer Name' }, // Customer Name
  { data: 'uid', title: 'Customer ID' }, // Customer ID (assuming 'uid' is the customer ID)
  { data: 'mobileNumber', title: 'Contact' }, // Contact (assuming 'mobileNumber' is the primary contact)
  { 
    data: 'createdAt', 
    title: 'Registered On', 
    render: function (data) {
      return new Date(data).toLocaleDateString(); // Format the date as required
    }
  }, // Registered On
  { 
    data: 'lastOrderedAt', 
    title: 'Recent Delivery', 
    render: function (data) {
      return data ? new Date(data).toLocaleDateString() : 'N/A'; // Format the date or display 'N/A'
    }
  }, // Recent Delivery (Last order date)
  { data: 'walletBalance', title: 'Wallet Balance' }, // Wallet Balance
  { data: 'city', title: 'City' }, // City
  { data: 'address', title: 'Address' }, // Address
  { 
    data: 'verified', 
    title: 'Status', 
    render: function (data) {
      return data ? 'Verified' : 'Not Verified'; // Display customer verification status
    }
  }, // Status (Verified or Not Verified)
  // { data: 'otherDetails', title: 'Caption' }, // Caption (using 'otherDetails' as caption, adjust as needed)
  {
  data: null, // Using null since the data will be determined dynamically
  title: 'Caption',
  render: function (data, type, row) {
    if (row.otherDetails && row.otherDetails.trim() !== '') {
      return row.otherDetails; // Display otherDetails if available
    } else if (row.city && row.city.trim() !== '') {
      return row.city; // Otherwise, display city if available
    }
    return 'N/A'; // Default to 'N/A' if neither is available
  }
}
]
});
      });
    </script>

