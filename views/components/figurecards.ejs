  <script>
    $(document).ready(function () {
      $('.city-js').select2({
        dropdownParent: $("#cardb"),
        tags: true, // Enables adding custom options
        placeholder: "Select or enter a city", // Placeholder text
        allowClear: true, // Enables clearing selection
        ajax: {
          url: '/citynames', // Backend endpoint
          dataType: 'json',
          delay: 250, // Debounce for performance
          processResults: function (data) {
            // Add "All" as the first option
            let cityOptions = [{ id: "All", text: "All" }];
            
            // Append server response options
            cityOptions = cityOptions.concat(data.map(function (item) {
              return { id: item.city, text: item.city }; // Customize text display
            }));
            
  
            return { results: cityOptions };

            
          },
        },
      
      });
    });
  </script>
  