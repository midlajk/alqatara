  }
  
  .filter-btn:hover {
    background-color: #2d3748;
    transform: translateY(-2px);
  }
  
  .date-filter {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }
  
  .date-input {
    flex: 1;
    min-width: 200px;
    padding: 10px 15px;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    display: flex;
    align-items: center;
    background: white;
    transition: border-color 0.3s ease;
  }
  
  .date-input:hover {
    border-color: #cbd5e0;
  }
  
  .date-input span {
    color: #4a5568;
    font-size: 14px;
    margin-right: 10px;
    font-weight: 500;
  }
  
  .date-input input {
    border: none;
    outline: none;
    flex: 1;
    color: #2d3748;
    font-size: 14px;
  }
  
  .date-input svg {
    width: 18px;
