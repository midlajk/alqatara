<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/js/select2.min.js" defer></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
<script>
  $(document).ready(function() {
    // Initialize Select2 for salesman filter
    $('.salesman-js').select2({
      placeholder: "Select Salesman",
      ajax: {
        url: '/salesmanids',
        dataType: 'json',
        delay: 250,
        data: function(params) {
          return {
            search: params.term
          };
        },
        processResults: function(data) {
          return {
            results: data.map(function(item) {
              return { id: item.id, text: item.id };
            }),
          };
        },
      }
    });

    // Initialize DataTable
    const paymentTable = $('#paymentTable').DataTable({
      responsive: true,
      processing: true,
      serverSide: true,
      ajax: {
        url: '/api/cashier-collections',
        data: function(d) {
          // Add custom filter parameters
          d.fromDate = $('#fromDate').val();
          d.toDate = $('#toDate').val();
          d.salesmanId = $('#salesmanFilter').val();
          d.paymentMethod = $('#paymentMethodFilter').val();
        }
      },
      columns: [
        { data: 'updatedAt', render: function(data) {
          return new Date(data).toLocaleDateString();
        }},
        { data: 'salesman_id' },
        { data: 'amount', render: function(data) {
          return '$' + parseFloat(data).toFixed(2);
        }},
        { data: 'payment_method' },
        { data: 'collectionfrom' },
        { data: 'notes' }
      ],
      language: {
        paginate: {
          next: '<i class="fas fa-chevron-right"></i>',
          previous: '<i class="fas fa-chevron-left"></i>'
        },
        search: "_INPUT_",
        searchPlaceholder: "Search payments...",
      }
    });

    // Set default dates (last 30 days)
    const today = new Date();
    const thirtyDaysAgo = new Date();
    thirtyDaysAgo.setDate(today.getDate() - 30);
    
    $('#fromDate').val(thirtyDaysAgo.toISOString().split('T')[0]);
    $('#toDate').val(today.toISOString().split('T')[0]);

    // Function to update dashboard stats
    function updateDashboardStats() {
      const fromDate = $('#fromDate').val();
      const toDate = $('#toDate').val();
      const salesmanId = $('#salesmanFilter').val();
      const paymentMethod = $('#paymentMethodFilter').val();

      $.ajax({
        url: '/api/cashier-collections/stats',
        method: 'GET',
        data: {
          fromDate,
          toDate,
          salesmanId,
          paymentMethod
        },
        success: function(data) {
          $('#totalPayment').text('$' + data.total.toFixed(2));
          $('#cashPayments').text('$' + data.cash.toFixed(2));
          $('#cardPayments').text('$' + data.card.toFixed(2));
          // $('#creditPayments').text('$' + data.credit.toFixed(2));
        }
      });
    }

    // Filter button click handler
    $('#applyFilterBtn').click(function() {
      const fromDate = $('#fromDate').val();
      const toDate = $('#toDate').val();
      
      if (!fromDate || !toDate) {
        alert('Please select both date ranges');
        return;
      }
      
      if (new Date(fromDate) > new Date(toDate)) {
        alert('From date cannot be after To date');
        return;
      }
      
      // Show loading state
      $(this).html('<i class="ni ni-loading"></i> Filtering...');
      
      // Reload table data and update stats
      paymentTable.ajax.reload(function() {
        $('#applyFilterBtn').html('<i class="ni ni-filter"></i> Apply Filter');
      });
      
      updateDashboardStats();
    });

    // Handle filter changes
    $('#salesmanFilter, #paymentMethodFilter').change(function() {
      paymentTable.ajax.reload();
      updateDashboardStats();
    });

    // Download report handler
    $('#downloadReport').click(function(e) {
      e.preventDefault();
      const fromDate = $('#fromDate').val();
      const toDate = $('#toDate').val();
      const salesmanId = $('#salesmanFilter').val();
      const paymentMethod = $('#paymentMethodFilter').val();

      window.location.href = `/api/cashier-collections/export?fromDate=${fromDate}&toDate=${toDate}&salesmanId=${salesmanId}&paymentMethod=${paymentMethod}`;
    });

    // Initial load of data
    updateDashboardStats();
  });
</script>

