<script>
  $(document).ready(function() {
    // Initialize DataTables
    $('#salesmanTable').DataTable({
      "pagingType": "full_numbers",
      "language": {
        "paginate": {
          "previous": "<i class='fas fa-angle-left'></i>",
          "next": "<i class='fas fa-angle-right'></i>",
          "first": "<i class='fas fa-angle-double-left'></i>",
          "last": "<i class='fas fa-angle-double-right'></i>"
        }
      }
    });
    
    $('#customerTable').DataTable({
      "pagingType": "full_numbers",
      "language": {
        "paginate": {
          "previous": "<i class='fas fa-angle-left'></i>",
          "next": "<i class='fas fa-angle-right'></i>",
          "first": "<i class='fas fa-angle-double-left'></i>",
          "last": "<i class='fas fa-angle-double-right'></i>"
        }
      }
    });
    
    // Collection modal handler for salesmen
    $('.collect-payment').click(function() {
      const salesmanId = $(this).data('id');
      const salesmanName = $(this).closest('tr').find('td:first').text();
      
      $('#salesmanName').val(salesmanName);
      $('#collectionModal').modal('show');
    });
    
    // Collection modal handler for customers
    $('.collect-customer-payment').click(function() {
      const customerId = $(this).data('id');
      const customerName = $(this).closest('tr').find('td:eq(1)').text();
      const dueAmount = $(this).closest('tr').find('td:eq(2)').text();
      
      $('#customerName').val(customerName);
      $('#customerDueAmount').val(dueAmount);
      $('#customerPaymentAmount').val(dueAmount.replace('$', ''));
      $('#customerCollectionModal').modal('show');
    });
    
    // Confirm salesman collection
    $('#confirmCollection').click(function() {
      // Here you would typically send data to server
      $('#collectionModal').modal('hide');
      
      // Show success notification
      alert('Payment collected successfully!');
    });
    
    // Confirm customer collection
    $('#confirmCustomerCollection').click(function() {
      // Here you would typically send data to server
      $('#customerCollectionModal').modal('hide');
      
      // Show success notification
      alert('Customer payment collected successfully!');
    });
    
    // Animate numbers in summary cards
    $('.card-stats .h2').each(function() {
      const $this = $(this);
      const target = parseInt($this.text().replace(/[^0-9]/g, ''));
      const duration = 2000;
      
      $({ countNum: 0 }).animate({ countNum: target }, {
        duration: duration,
        easing: 'swing',
        step: function() {
          $this.text('$' + Math.floor(this.countNum).toLocaleString());
        },
        complete: function() {
          $this.text('$' + target.toLocaleString());
        }
      });
    });
  });
</script>

