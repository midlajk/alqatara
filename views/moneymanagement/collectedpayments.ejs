<script>
  $(document).ready(function() {
    // Initialize DataTable
    $('#paymentTable').DataTable({
      responsive: true,
     
      language: {
         paginate: {
        next: '<i class="fas fa-chevron-right"></i>',
        previous: '<i class="fas fa-chevron-left"></i>'
      },
        search: "_INPUT_",
        searchPlaceholder: "Search payments...",
      },
      // dom: '<"top"f>rt<"bottom"lip><"clear">',
      initComplete: function() {
        $('.dataTables_filter input').addClass('form-control');
      }
    });
    
    // Set default dates (last 30 days)
    const today = new Date();
    const thirtyDaysAgo = new Date();
    thirtyDaysAgo.setDate(today.getDate() - 30);
    
    $('#fromDate').val(thirtyDaysAgo.toISOString().split('T')[0]);
    $('#toDate').val(today.toISOString().split('T')[0]);
    
    // Filter button click handler
    $('#applyFilterBtn').click(function() {
      const fromDate = $('#fromDate').val();
      const toDate = $('#toDate').val();
      
      if (!fromDate || !toDate) {
        alert('Please select both date ranges');
        return;
      }
      
      if (new Date(fromDate) > new Date(toDate)) {
        alert('From date cannot be after To date');
        return;
      }
      
      // Here you would typically make an AJAX call to filter data
      console.log('Filtering from:', fromDate, 'to:', toDate);
      // simulate loading
      $(this).html('<i class="ni ni-loading"></i> Filtering...');
      
      setTimeout(() => {
        $(this).html('<i class="ni ni-filter"></i> Apply Filter');
        // In a real app, you would update the table data here
      }, 1000);
    });
    
    // Initialize charts (example)
    const ctx = document.createElement('canvas');
    ctx.style.display = 'none';
    document.body.appendChild(ctx);
    
    const paymentChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Cash', 'Wallet', 'Credit', 'Deposit', 'Recharge'],
        datasets: [{
          label: 'Payment Distribution',
          data: [1850, 1200, 200, 820, 270],
          backgroundColor: [
            'rgba(75, 192, 192, 0.6)',
            'rgba(54, 162, 235, 0.6)',
            'rgba(255, 206, 86, 0.6)',
            'rgba(153, 102, 255, 0.6)',
            'rgba(255, 159, 64, 0.6)'
          ],
          borderColor: [
            'rgba(75, 192, 192, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  });
</script>

